{
  "name": "lazy-kitchen",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "engines": {
    "node": "16.14.2",
    "yarn": "1.22.18"
  },
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.1.1",
    "@rails/actioncable": "^7.0.2-2",
    "@rails/actiontext": "^7.0.2-2",
    "@rails/activestorage": "^7.0.2-2",
    "@rails/request.js": "^0.0.6",
    "esbuild": "^0.14.34",
    "sass": "^1.50.0",
    "sortablejs": "^1.15.0",
    "stimulus-rails-nested-form": "^4.0.0",
    "stimulus-sortable": "^3.2.0",
    "trix": "1.3.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "sass app/assets/stylesheets/application.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "failure:js": "rm ./app/assets/builds/application.js && rm ./app/assets/builds/application.js.map",
    "dev": "tsc-watch --noClear -p tsconfig.json --onSuccess \"yarn build\" --onFailure \"yarn failure:js\""
  }
}
