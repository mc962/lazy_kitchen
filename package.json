{
  "name": "lazy-kitchen",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "engines": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  },
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.1.1",
    "@rails/actioncable": "^7.0.1",
    "@rails/activestorage": "^7.0.1",
    "@rails/request.js": "^0.0.6",
    "esbuild": "^0.14.12",
    "sass": "^1.49.0",
    "sortablejs": "^1.14.0",
    "stimulus-rails-nested-form": "^4.0.0",
    "stimulus-sortable": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "build:js": "esbuild app/javascript/*.* --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "sass app/assets/stylesheets/application.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "failure:js": "rm ./app/assets/builds/application.js && rm ./app/assets/builds/application.js.map",
    "dev": "tsc-watch --noClear -p tsconfig.json --onSuccess \"yarn build:js\" --onFailure \"yarn failure:js\""
  }
}
