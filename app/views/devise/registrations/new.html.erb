<h2 class="auth-heading">Sign up</h2>

<%= form_for(resource, as: resource_name, html: {class: 'auth-form'}, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-ctrl-container field">
    <%= f.label :email, class: 'form-ctrl-lbl' %><br />
    <%= f.email_field :email, class: 'form-ctrl', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-ctrl-container field">
    <%= f.label :password, class: 'form-ctrl-lbl' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: 'form-ctrl', autocomplete: "new-password" %>
  </div>

  <div class="form-ctrl-container field">
    <%= f.label :password_confirmation, class: 'form-ctrl-lbl' %><br />
    <%= f.password_field :password_confirmation, class: 'form-ctrl', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'button submit-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
