<h2 class="auth-heading">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'auth-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-ctrl-container field">
    <%= f.label :password, "New password", class: 'form-ctrl-lbl' %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, class: 'form-ctrl', autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="form-ctrl-container field">
    <%= f.label :password_confirmation, "Confirm new password", class: 'form-ctrl-lbl' %><br />
    <%= f.password_field :password_confirmation, class: 'form-ctrl', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'button submit-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
