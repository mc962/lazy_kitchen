<h2 class="auth-heading">Log in</h2>

<%= form_for(resource, as: resource_name, html: {class: 'auth-form'}, url: session_path(resource_name)) do |f| %>
  <div class="form-ctrl-container field">
    <%= f.label :email, class: 'form-ctrl-lbl' %><br />
    <%= f.email_field :email, class: 'form-ctrl', autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-ctrl-container field">
    <%= f.label :password, class: 'form-ctrl-lbl' %><br />
    <%= f.password_field :password, class: 'form-ctrl', autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field auth-checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'button submit-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
