<h1 class='recipe-heading'><%= @recipe.name %></h1>

<section class="recipe-content">
  <% if user_signed_in? && allowed_to?(:edit?, @recipe) %>
    <%= link_to 'Edit', edit_manage_legacy_recipe_path(@recipe) %>
  <% end %>

  <div class="recipe-profile-img-container">
    <img src="<%= @recipe.image_url %>" alt="A display of <%= @recipe.name %>" class="recipe-profile-img" />
  </div>

  <p aria-label="Recipe description"><%= @recipe.description %></p>
</section>

<section id="recipe_content">
  <section id="recipe_ingredients" class="recipe-col">
    <label for="ingredients">Ingredients</label>
    <ul id="ingredients">
      <% @recipe.steps.each do |step| %>
        <%= render partial: 'application/recipes/step_ingredient', collection: step.step_ingredients %>
    <% end %>
    </ul>
  </section>

  <section id="recipe_steps" class="recipe-col">
    <label for="steps">Steps</label>
    <ol id="steps">
      <%= render partial: 'application/recipes/step', collection: @recipe.steps %>
    </ol>
  </section>
</section>

<div class="return-link"><%= link_to "All Recipes", recipes_path %></div>