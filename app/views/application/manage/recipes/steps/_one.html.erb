<li class="resource-item recipe-step nested-form-wrapper" data-new-record="<%= steps_form.object.new_record? %>">
  <%= steps_form.hidden_field :order, class: "recipe-step-order" %>

  <div class="form-ctrl-container">
    <%= steps_form.text_area :instruction, class: "form-ctrl-text" %>
  </div>

  <div class="nested-form-actions">
    <button type="button" class="cancel-btn" data-action="nested-form#remove">
      Remove Step
    </button>

    <button type="button" class="undo-remove-btn hidden" data-action="nested-form#undoRemove">
      Undo Remove
    </button>

    <% unless steps_form.object.new_record? %>
      <%= link_to 'Edit', decorated_query_url_for(edit_manage_recipe_step_path(steps_form.object.recipe.slug, steps_form.object.id), {tab: 'step'}), data: {"turbo-frame": :"tab_content", turbo: false}, class: 'nested-form-nav-link' %>
    <% end %>
  </div>

  <%= steps_form.hidden_field :_destroy %>
</li>
